{% extends "item.twig" %}

{% set itemUrl = baseUrl ~ "/authorities/" ~ id %}

{% block heading %}
    <h2>
        <a target="_blank" href="{{ itemUrl }}" class="external type-highlight {{ type }}">
            {{ attributes.name }}
        </a>
    </h2>
    {% set otherNames = attributes.otherFormsOfName|default([])|merge(attributes.parallelFormsOfName|default([])) %}
    {% if otherNames %}
        <ul class="ehri-item-alternate-names">
            {% for name in otherNames %}
                <li>{{ name }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

{% block details %}
    <ul>
        {% if meta.updated %}
            <li>Updated {{ meta.updated|time_diff }}</li>
        {% endif %}
    </ul>
{% endblock %}


